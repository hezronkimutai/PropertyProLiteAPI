{
  "name": "script_rest_api",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=development npm run create && nodemon --exec babel-node api/index.js",
    "start:prod": "NODE_ENV=production npm run create && babel-node api/index.js",
    "test": "NODE_ENV=test npm run _drop && npm run _create && npm run drop && npm run create && nyc --reporter=text mocha --exit --require @babel/register --require @babel/polyfill ",
    "create": "babel-node ./api/v2/database/config createTables",
    "drop": "babel-node ./api/v2/database/config dropTables",
    "_create": "babel-node ./api/v1/models deleteAllProperties",
    "_drop": "babel-node ./api/v1/models deleteAllUsers",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Hezron Kimutai Chelimo",
  "license": "ISC",
